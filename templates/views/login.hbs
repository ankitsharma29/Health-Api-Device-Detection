<!doctype html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}

    <!-- main header  -->

    <div class="container-fluid mt-5 contact-style my-3">
        <div class="row"> 
            <div class="col-md-5 col-12 mx-auto">
                <form action="login" method="POST">
                    <h1 class="text-center"> Contact Us </h1>
                    <div class="form-group">
                        <label for="exampleFormControlInput1" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" value="" id="exampleFormControlInput1"
                            placeholder="Enter your first name">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1" class="form-label">Choose a password</label>
                        <input type="password" class="form-control" name="password" value=""
                            id="exampleFormControlInput1" placeholder="Choose a password">
                    </div>

                    <div class="col-12">
                        <button class="btn btn-success" type="submit">Submit form</button>
                    </div>
                    <h2 class="mx-lg-5 my-2">or</h2>
                    <h3 class="text-body my-2">Forgot Your Password No Worry? <a href="/reset_password">Click Here
                        </a> </h3>

                    <div class="text-dark my-1">
                        <h3>Already have an account? <a href="/contacts">sign in</a>.</h3>
                    </div>

                </form>
            </div>
        </div>
    </div>


    {{>footer}}
</body>

</html>