<!doctype html>
<html lang="en">

<head>
    {{>headerlinks}}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
</head>

<body>
    {{>navbar}}

    <!-- main header  -->
 

    <div class="container-fluid mt-5 contact-style my-3">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <h1 class="text-center main-heading">Health Api Create </h1>
                <p class="text-center sub-heading">we will be happy to help you</p>
                <div class="row">
                    <div class="col-md-6 col-12 mx-auto">
                        <form action="/health" method="POST">
                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">healthname</label>
                                <input type="text" class="form-control" name="healthname" value=""
                                    id="exampleFormControlInput1" placeholder="Enter your Username">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">healthnumber</label>
                                <input type="number" class="form-control" name="healthnumber" value=""
                                    id="exampleFormControlInput1" placeholder="Enter your first name">
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">healthimage</label>
                                <input type="text" class="form-control" name="healthimage" value=""
                                    id="exampleFormControlInput1" placeholder="Choose a password">
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">healthurl</label>
                                <input type="text" class="form-control" name="healthurl" value=""
                                    id="exampleFormControlInput1" placeholder="Retype a password">
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">Message</label>
                                <textarea class="form-control is-invalid" name="healthmessage" value=""
                                    id="validationTextarea" placeholder="Required example textarea" required></textarea>
                            </div>

                            <div class="invalid-feedback">
                                You must agree before submitting.
                            </div>


                            <div class="col-12 health">
                                <button type="submit">Submit form</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{>footer}}
</body>

</html>